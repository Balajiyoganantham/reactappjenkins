pipeline {
    agent any
    stages {
        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }
        stage('Run Tests') {
            steps {
                bat 'npm test'
            }
        }
        stage('Build Project') {
            steps {
                bat 'npm run build'
            }
        }
        stage('Deploy Application') {
            steps {
                bat 'xcopy /E /I /Y build \\path\\to\\deploy\\directory'
            }
        }
    }
}

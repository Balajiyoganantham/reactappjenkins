pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Install') {
            steps {
                dir('your-react-app-folder') { 
                    script {
                        bat 'npm install'
                    }
                }
            }
        }

        stage('Lint') {
            steps {
                dir('your-react-app-folder') {
                    script {
                        bat 'npm run lint'
                    }
                }
            }
        }

        stage('Build') {
            steps {
                dir('your-react-app-folder') {
                    script {
                        bat 'npm run build'
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploy successful!'
            }
        }
    }

    post {
        always {
            echo 'Build and deployment completed!'
        }
    }
}

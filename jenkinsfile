pipeline {
    agent any
    
    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/Balajiyoganantham/reactappjenkins.git'
            }
        }
        
        stage('Install Dependencies') {
            steps {
                script {
                    bat 'npm install'
                }
            }
        }
        
        stage('Run Tests') {
            steps {
                script {
                    bat 'npm test -- --ci --reporters=default --reporters=jest-stare'
                }
            }
        }
        
        stage('Build Project') {
            steps {
                script {
                    bat 'npm run build'
                }
            }
        }
        
        stage('Deploy Application') {
            steps {
                script {
                    bat 'xcopy /E /I build C:\\path\\to\\deployment\\directory'
                }
            }
        }

        stage('Lint Code') {
            steps {
                script {
                    bat 'npx eslint .'
                }
            }
        }
        
        stage('Post-Deployment Test') {
            steps {
                script {
                    bat 'curl -f http://localhost:3000 || exit 1'
                }
            }
        }
    }
}

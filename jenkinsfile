pipeline {
    agent any
    
    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/Balajiyoganantham/reactappjenkins.git'
            }
        }
        
        stage('Install Dependencies') {
            steps {
                script {
                    sh 'npm install'
                }
            }
        }
        
        stage('Run Tests') {
            steps {
                script {
                    sh 'npm test -- --ci --reporters=default --reporters=jest-stare'
                }
            }
        }
        
        stage('Build Project') {
            steps {
                script {
                    sh 'npm run build'
                }
            }
        }
        
        stage('Deploy Application') {
            steps {
                script {
                    sh 'cp -r build /path/to/deployment/directory'
                }
            }
        }

        stage('Lint Code') {
            steps {
                script {
                    sh 'npx eslint .'
                }
            }
        }
        
        stage('Post-Deployment Test') {
            steps {
                script {
                    sh 'curl -f http://localhost:3000 || exit 1'
                }
            }
        }
    }
}

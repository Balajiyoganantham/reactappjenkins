pipeline {
    agent any

    environment {
        // Set your environment variables here if needed (like npm registry, etc.)
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Install') {
            steps {
                dir('your-react-app-folder') { 
                    script {
                        // Run npm install to install dependencies
                        bat 'npm install'
                    }
                }
            }
        }

        stage('Lint') {
            steps {
                dir('your-react-app-folder') {
                    script {
                        // Run linting
                        bat 'npm run lint'
                    }
                }
            }
        }

        stage('Build') {
            steps {
                dir('your-react-app-folder') {
                    script {
                        // Run build to create production-ready files
                        bat 'npm run build'
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                // Deploy your app (this could be FTP, SSH, or any other deployment mechanism)
                echo 'Deploy successful!'
            }
        }
    }

    post {
        always {
            echo 'Build and deployment completed!'
        }
    }
}
